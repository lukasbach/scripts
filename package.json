{
  "name": "@lukasbach/scripts",
  "type": "module",
  "version": "0.0.1",
  "description": "Various scripts for doing stuff fast",
  "bin": {
    "ldo": "lib/core/run.js"
  },
  "main": "lib/index.js",
  "module": "lib/index.js",
  "typings": "lib/index.d.ts",
  "repository": "https://github.com/lukasbach/scripts",
  "author": "Lukas Bach <npm@lukasbach.com>",
  "license": "MIT",
  "files": [
    "lib/**/*",
    "!lib/**/*.spec.js"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "inquirer": "^9.2.12",
    "minimist": "^1.2.8",
    "yargs": "^17.7.2"
  },
  "scripts": {
    "start": "esno ./src/core/run.ts",
    "build": "tsc",
    "lint": "eslint . --fix",
    "lint:test": "eslint .",
    "prepublishOnly": "yarn build",
    "clean": "rimraf ./lib/ ./exec/",
    "release": "publish-fast"
  },
  "devDependencies": {
    "@lukasbach/eslint-config-deps": "^1.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.5",
    "@types/yargs": "^17.0.32",
    "esbuild": "^0.19.8",
    "esbuild-runner": "^2.2.2",
    "eslint": "^8.25.0",
    "esno": "^4.0.0",
    "jest": "^29.1.2",
    "npm-run-all": "^4.1.5",
    "publish-fast": "^0.0.18",
    "rimraf": "^3.0.2",
    "typescript": "^5.3.2"
  },
  "packageManager": "yarn@3.5.0",
  "volta": {
    "node": "18.15.0",
    "yarn": "3.5.0"
  },
  "eslintConfig": {
    "extends": "@lukasbach/base",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "ignorePatterns": [
      "lib",
      "*.js"
    ]
  },
  "publish": {
    "preScripts": "build,lint:test,test"
  }
}
